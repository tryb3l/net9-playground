@model WebApp.Areas.Admin.ViewModels.Category.CreateCategoryViewModel
@{
    ViewData["Title"] = "Create New Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Create New Category</h5>
        </div>
        <div class="card-body">
            <form method="post" action="/Admin/Category/Create">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Name">Category Name:</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description">Description:</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create Category</button>
                <a href="/Admin/Category" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>