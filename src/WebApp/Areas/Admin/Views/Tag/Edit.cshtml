@model WebApp.Areas.Admin.ViewModels.Tag.EditTagViewModel

@{
    ViewData["Title"] = "Edit Tag";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <a href="@Url.Action("Index", "Tag", new { area = "Admin" })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Tags
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Edit Tag</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form method="post" action="/Admin/Tag/Edit">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <label for="Name">Tag Name:</label>
                            <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a href="@Url.Action("Index", "Tag", new { area = "Admin" })" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}