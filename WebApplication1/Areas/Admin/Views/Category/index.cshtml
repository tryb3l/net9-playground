@model IEnumerable<WebApplication1.Areas.Admin.ViewModels.Category.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">All Categories</h1>
        <a href="@Url.Action("Create", "Category", new { area = "Admin" })"
            onclick="window.location='@Url.Action("Create", "Category", new { area = "Admin" })'; return false;"
            class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Name</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(category.Description))
                                        {
                                            @(category.Description.Length > 50 ? category.Description.Substring(0, 50) + "..." :
                                                                            category.Description)
                                                                }
                                        else
                                        {
                                            @("No description provided.")
                                        };
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Category Actions">
                                            <a href="@Url.Action("Edit", "Category", new { id = category.Id, area = "Admin" })"
                                                onclick="window.location='@Url.Action("Edit", "Category", new { id = category.Id, area = "Admin" })'; return false;"
                                                class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@category.Id" method="post"
                                                class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"
                                                    onclick="return confirm('Are you sure you want to delete this category: @category.Name?');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No categories have been created yet.
                    <a href="@Url.Action("Create", "Category", new { area = "Admin" })"
                        onclick="window.location='@Url.Action("Create", "Category", new { area = "Admin" })'; return false;">Create
                        your first category</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["SuccessMessage"] != null)
    {
    }

}