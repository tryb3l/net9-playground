@model WebApplication1.Areas.Admin.ViewModels.Post.CreatePostViewModel
@{
    ViewData["Title"] = "Create New Post";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <a href="@Url.Action("Index", "Post", new { area = "Admin" })"
                onclick="window.location='@Url.Action("Index", "Post", new { area = "Admin" })'; return false;"
                class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Posts
            </a>
        </div>
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title" class="form-label">Post Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter post title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-select category-select">
                        <option value="">-- Select Category --</option>
                        @foreach (var category in Model.AvailableCategories)
                        {
                            <option value="@category.Value">@category.Text</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SelectedTagIds" class="form-label">Tags</label>
                    <select asp-for="SelectedTagIds" class="form-select tag-select" multiple>
                        <option value="">-- Select Tags --</option>
                        @foreach (var tag in Model.AvailableTags)
                        {
                            <option value="@tag.Value">@tag.Text</option>
                        }
                    </select>
                    <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
                    <small class="form-text text-muted">Hold Ctrl (or Command on Mac) to select multiple tags.</small>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Content" class="form-label">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="15" id="postEditor"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-check">
                    <input asp-for="PublishNow" class="form-check-input" />
                    <label asp-for="PublishNow" class="form-check-label">Publish immediately</label>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Post
                </button>
                <a href="@Url.Action("Index", "Post", new { area = "Admin" })"
                    onclick="window.location='@Url.Action("Index", "Post", new { area = "Admin" })'; return false;"
                    class="btn btn-outline-secondary ms-2">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/post-editor.js" asp-append-version="true"></script>
}