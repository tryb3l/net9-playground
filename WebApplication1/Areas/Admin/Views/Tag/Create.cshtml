@model WebApplication1.Areas.Admin.ViewModels.Tag.CreateTagViewModel

@{
    ViewData["Title"] = "Create New Tag";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Create New Tag</h5>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            
            <form method="post" action="/Admin/Tag/Create">
                <div class="mb-3">
                    <label for="Name">Tag Name:</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create Tag</button>
                <a href="/Admin/Tag" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>