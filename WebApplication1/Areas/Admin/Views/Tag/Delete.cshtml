@model WebApplication1.Models.Tag

@{
    ViewData["Title"] = "Delete Tag";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <a href="@Url.Action("Index", "Tag", new { area = "Admin" })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Tags
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Delete Tag Confirmation</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <strong>Warning!</strong> Are you sure you want to delete the tag: <strong>@Model.Name</strong>?
            </div>
            <p class="text-danger">This action cannot be undone.</p>
            
            <form method="post" action="/Admin/Tag/Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Tag
                </button>
                <a href="@Url.Action("Index", "Tag", new { area = "Admin" })" class="btn btn-secondary ms-2">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}