@model IEnumerable<WebApplication1.Areas.Admin.ViewModels.Tag.TagViewModel>

@{
    ViewData["Title"] = "Manage Tags";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">All Tags</h1>
        <a href="@Url.Action("Create", "Tag", new { area = "Admin" })" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Tag
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Tag Name</th>
                            <th>Posts Count</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var tag in Model)
                        {
                            <tr>
                                <td>@tag.Name</td>
                                <td>@tag.PostCount</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Tag Actions">
                                        <a href="@Url.Action("Edit", "Tag", new { id = tag.Id, area = "Admin" })"
                                           class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="/Admin/Tag/Delete" class="d-inline delete-form">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@tag.Id" />
                                            <input type="hidden" name="tagName" value="@tag.Name" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger delete-button" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No tags have been created yet.
                    <a href="@Url.Action("Create", "Tag", new { area = "Admin" })">Create your first tag</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteForms = document.querySelectorAll('.delete-form');
            deleteForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const tagName = form.querySelector('input[name="tagName"]').value;
                    if (!confirm(`Are you sure you want to delete this tag: ${tagName}?`)) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}