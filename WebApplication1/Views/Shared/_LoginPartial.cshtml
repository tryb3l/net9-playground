@using Microsoft.AspNetCore.Identity
@using WebApplication1.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown ms-auto">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://ui-avatars.com/api/?name=@(User.Identity?.Name)&background=random" alt="Profile"
                    class="rounded-circle me-2" width="32" height="32">
                <span class="d-none d-md-inline">@User.Identity?.Name</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i
                            class="bi bi-person me-2"></i>Profile</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-gear me-2"></i>Admin Panel</a></li>
                }
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                        asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item"><i
                                class="bi bi-box-arrow-right me-2"></i>Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>