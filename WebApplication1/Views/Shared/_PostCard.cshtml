@using WebApplication1.ViewModels
@model PostCardViewModel

<article class="mat-post-card">
    <a asp-controller="Blog" asp-action="Post" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug"
        class="post-card-link">
        @if (!string.IsNullOrEmpty(Model.FeaturedImageUrl))
        {
            <div class="post-image-container">
                <img src="@Model.FeaturedImageUrl" alt="@Model.Title" class="post-image" loading="lazy">
                <div class="image-overlay"></div>
            </div>
        }

        <div class="post-content">
            <div class="post-meta">
                <span class="post-category">@Model.CategoryName</span>
                <span class="post-date">@Model.PublishDate.ToString("MMM dd")</span>
            </div>

            <h3 class="post-title">@Model.Title</h3>
            <p class="post-excerpt">@Model.ShortDescription</p>

            <div class="post-footer">
                <div class="post-tags">
                    @foreach (var tag in Model.Tags.Take(2))
                    {
                        <span class="post-tag">#@tag.Name</span>
                    }
                </div>
                <div class="read-more">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </div>
        </div>
    </a>
</article>