@model WebApplication1.ViewModels.PostCardViewModel

<article class="post-card">
    <a asp-controller="Blog" asp-action="Post" asp-route-slug="@Model.Slug" class="post-card-link">
        <div class="post-card-image-container">
            @if (Model.FeaturedImageUrls.TryGetValue("medium", out var imageUrl))
            {
                <img src="@imageUrl" class="post-card-image" alt="@Model.Title" loading="lazy">
            }
            else
            {
                <div class="post-card-image-placeholder">
                    <i class="bi bi-card-image"></i>
                </div>
            }
        </div>
        <div class="post-card-content">
            <div class="post-card-header">
                <span class="post-card-category">@Model.CategoryName</span>
                <span class="post-card-date">@Model.PublishDate.ToString("MMM dd, yyyy")</span>
            </div>
            <h3 class="post-card-title">@Model.Title</h3>
            <p class="post-card-excerpt">@Model.ShortDescription</p>
            <div class="post-card-footer">
                <div class="post-card-tags">
                    @foreach (var tag in Model.Tags.Take(3))
                    {
                        <span class="post-card-tag">#@tag.Name</span>
                    }
                </div>
            </div>
        </div>
    </a>
</article>