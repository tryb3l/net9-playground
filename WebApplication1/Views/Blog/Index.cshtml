@model WebApplication1.ViewModels.BlogIndexViewModel
@{
    ViewData["Title"] = "Blog";
}

<div class="container mt-4">
    <div class="row">
        <!-- Main content -->
        <div class="col-lg-8">
            <h1 class="mb-4">Blog Posts</h1>

            @if (Model.Posts.Any())
            {
                <div class="post-card-grid">
                    @foreach (var post in Model.Posts)
                    {
                        <partial name="_PostCard" model="post" />
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p class="mb-0">No posts found. Try clearing the filters to see all posts.</p>
                </div>
            }

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i"
                                    asp-route-category="@Model.CurrentCategory" asp-route-tag="@Model.CurrentTag">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Categories widget -->
            <div class="card mb-4">
                <div class="card-header">Categories</div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        @foreach (var category in Model.Categories)
                        {
                            <li>
                                <a asp-action="Index" asp-route-category="@category.Slug"
                                    class="@(category.Slug == Model.CurrentCategory ? "fw-bold" : "")">
                                    @category.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Tags widget -->
            <div class="card mb-4">
                <div class="card-header">Popular Tags</div>
                <div class="card-body">
                    @foreach (var tag in Model.Tags)
                    {
                        <a asp-action="Index" asp-route-tag="@tag.Slug"
                            class="badge bg-secondary text-decoration-none link-light @(tag.Slug == Model.CurrentTag ? "bg-primary" : "")">
                            @tag.Name
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>