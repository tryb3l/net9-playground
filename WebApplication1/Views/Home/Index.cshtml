@{
    ViewData["Title"] = "Home Page";
}

<div class="home-page-wrapper">
    <!-- Hero Section -->
    <section class="home-hero-card">
        <div class="hero-content">
            <h1 class="hero-title">Welcome to My Personal Blog</h1>
            <p class="hero-subtitle">Sharing insights, projects, and thoughts on software development</p>
            <div class="hero-actions">
                <a class="btn btn-primary btn-lg" asp-controller="Blog" asp-action="Index" role="button">
                    <i class="bi bi-journal-text me-2"></i>Visit the Blog
                </a>
                <a class="btn btn-outline-primary btn-lg" asp-controller="About" asp-action="Index" role="button">
                    <i class="bi bi-person me-2"></i>Learn About Me
                </a>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="home-about-card">
        <div class="about-content">
            <h2>About Me</h2>
            <p>
                Welcome to my corner of the internet! I'm passionate about building scalable
                web applications, solving complex problems, and writing clean code.
                With experience in .NET, C#, ASP.NET Core, and Cloud Technologies, I
                enjoy creating solutions that are both efficient and user-friendly.
            </p>
            <p>
                This website serves as a platform to document my journey, share technical articles, and showcase
                projects I'm working on.
            </p>
        </div>
    </section>

    <!-- Features Grid -->
    <section class="home-features">
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-code-slash"></i>
                </div>
                <h3>Skills & Expertise</h3>
                <p>Backend Development, Cloud Architecture, DevOps, and modern web technologies.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-folder"></i>
                </div>
                <h3>Projects</h3>
                <p>Showcasing personal and professional projects with detailed technical insights.</p>
                <a asp-controller="Blog" asp-action="Index" class="feature-link">See Blog Posts</a>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-envelope"></i>
                </div>
                <h3>Get In Touch</h3>
                <p>Connect with me through various platforms or reach out for collaboration opportunities.</p>
            </div>
        </div>
    </section>
</div>